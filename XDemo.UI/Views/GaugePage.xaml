<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:extElement="clr-namespace:XDemo.UI.Controls.ExtendedElements"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="main"
    x:Class="XDemo.UI.Views.GaugePage">
    <extElement:GaugeChartView
        x:Name="chartView"
        CurrentValue="{Binding CurrentValue}"
        MaxValue="{Binding MaxValue}"
        ResourceObject="{Binding Source={x:Reference main}}" />
</ContentPage>